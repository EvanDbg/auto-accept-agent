{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: compile",
            "type": "npm",
            "script": "compile",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Start Antigravity Debug",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/launch-antigravity-debug.cmd",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--inspect-extensions=53035"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Debugger listening"
                }
            },
            "dependsOn": [
                "npm: compile"
            ]
        }
    ]
}